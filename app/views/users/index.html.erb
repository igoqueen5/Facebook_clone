<div class="center"><img src="friends.jpg" /></div>

<div class="container">
  <div class="row">

  <% @users.each do |user| %>
<h1><%= user.name %></h1>
    <%= profile_img(user) %><br>
    <%= user.email %><br>
    <%= link_to 'ユーザー詳細', user_path(user) %>
    <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
    <% if user.id != current_user.id %>
    <%= render partial: 'follow_form', locals: { user: user } if signed_in? %>
<% end %>
<% end %>
</div>
</div>
